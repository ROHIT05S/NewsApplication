<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b19cd9"
    android:padding="10dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="FeedBack" />
    <EditText
        android:id="@+id/ed_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/news_item_border"
        android:layout_marginTop="20dp"
        android:paddingLeft="5dp"
        android:hint="Name:- *"/>
    <EditText
        android:id="@+id/ed_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/news_item_border"
        android:paddingLeft="5dp"
        android:layout_marginTop="20dp"
        android:hint="Email:- *"/>
    <Switch
        android:id="@+id/switch_news_relevant"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/news_item_border"
        android:layout_marginTop="20dp"
        android:paddingLeft="5dp"
        android:text="Are the news relevant ?? "/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:text="Please Rate Your Experience "/>
    <RatingBar
        android:id="@+id/rating_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:numStars="50"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:text="Overall Comments *"/>

    <EditText
        android:id="@+id/ed_overall_comments"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/news_item_border"
        android:layout_height="50dp"
        android:paddingLeft="5dp"
        android:maxLength="10"/>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Feedback"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/news_item_border"
        android:textAllCaps="false"/>

</LinearLayout>
</layout>